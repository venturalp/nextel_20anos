/****** Config Files *******/
@import 'reset'

use_reset('meyer')
reset('all')
/***************************/

/****** Components *********/
@import 'general/vars.styl'
@import 'general/functions.styl'

/***************************/

*, *::after, *::before      
	box-sizing border-box 	
	font-weight 300
	transition all 0.2s ease
	
html
	height 100%
	
body
	width 100%
	height 100%
	overflow-x hidden
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	font-family "NIISans", sans-serif
	
.content
	width $content
	margin 0 auto

select::-ms-expand {
    display: none;
}

.ng-cloak
	display none !important
	
#banners
	margin-bottom 40px
	& .banner
		display table
		width 100%
		& .left, & .right
			display table-cell
			width 50%			
			vertical-align middle
		& .right
			background-image url('../images/gray-bg.jpg')
			position relative
			&:after
				position absolute
				content url("../images/arrow.png")
				bottom 10%
				right 5%
		& .left
			background-image url('../images/orange-bg.jpg')
			& img
				float right
				max-width 100%
		& .highlight
			text-align center
			position relative
			centerW()
			display inline-block
			& p
				width auto
			& .size
				font-weight bold
				color $txt-banner
				set-font-size(90px)				
				line-height 90px
				& .big
					set-font-size(140px)
			& .subtitle
				color #fff
				set-font-size(26px)
				font-weight bold
			& .plus
				display table
				color $txt-banner
				&>div
					display table-cell
					vertical-align middle
					&:first-child
						font-weight bold
						set-font-size(120px)
						padding-right 5px
						line-height 90px
					&:last-child
						set-font-size(40px)
						& b
							font-weight bold
						& p:first-child
							letter-spacing 5px							
			& .subtitle-small
				color #fff
				set-font-size(20px)
				font-weight bold
			& .promo
				padding 30px 20px 0px
				& .info
					color #fff
					set-font-size(14px)
					text-align left
					font-weight bold
				& .price
					display table
					padding-top 8px
					position relative
					centerW()
					&>div
						display table-cell
						vertical-align top
						color $txt-banner
						font-weight bold
						&:first-child
							set-font-size(24px)
						&:nth-child(2)
							set-font-size(140px)
							line-height 90px
						&:nth-child(3)
							set-font-size(28px)
							& p
								set-font-size(14px)
								color #fff
	& .slick-dots
		position absolute
		bottom 20px
		& li
			& button
				&:before
					color #fff
					set-font-size(15px)
			&.slick-active
				& button
					&:before
						set-font-size(22px)
						color $dot-focus
								
						
.contrate	
	background-color #ffffff
	border 1px solid #ffffff		
	box-shadow 0px 0px 30px 0px rgba(0,0,0,0.1)
	& .content
		padding 0px 70px
	& h1
		text-align center
		color #fff
		background-color $dark
		set-font-size(40px)
		line-height 68px
		font-weight bold
	& .customer-type
		position relative
		padding-top 25px
		& h2
			color $light-txt
			set-font-size(24px)			
		&>div
			position absolute
			right 0px
			top 25px
			& input[type=radio]
				appearance none
				height 16px
				width 16px
				border 2px solid #000000
				border-radius 50%
				position relative
				margin-right 14px
				&:checked:after
					content ""
					height 8px
					width 8px
					border-radius 50%
					background-color $mainColor
					position absolute
					center()
			& label
				set-font-size(23px)
				color $mainColor
				margin-left 30px
	& .form
		padding-top 30px
		&>div
			margin-bottom 11px
			&:first-child
				width 800px
				& input
					width 100%
		
input[type=text]
	set-font-size(23px)
	font-weight 300
	padding 12px 0px
	border 0px
	appearance none
	border-bottom 1px solid $mainColor
	&::-webkit-input-placeholder
		color $mainColor
	&::-moz-placeholder
		color $mainColor
	&:-ms-input-placeholder
		color $mainColor
	&:-moz-placeholder
		color $mainColor
	outline none
	&:focus
		border-color $dark
		&::-webkit-input-placeholder
			color $dark
		&::-moz-placeholder
			color $dark
		&:-ms-input-placeholder
			color $dark
		&:-moz-placeholder
			color $dark